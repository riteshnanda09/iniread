require 'inifile'
Puppet::Parser::Functions.newfunction(
  :inireadvalue, :type => :rvalue,
  :arity => 3,
  :doc => "Reads an .ini file and...") do |args|
        filename = args[0]
        section = args[1]
        key = args[2]
        file = IniFile.load(filename)
        data = file[section]
        value = data[key]
        return value

      end

